# ============================================
# MCWEB FAST - Variables de Entorno
# ============================================
# Copia este archivo a .env y rellena los valores

# Base de datos
DATABASE_PATH=./data/database.sqlite

# JWT Secret (genera uno seguro: openssl rand -hex 32)
JWT_SECRET=cambia_esto_por_un_secreto_muy_largo_y_seguro

# Puerto del servidor
PORT=3000

# ============================================
# APIs EXTERNAS - Consigue estos tokens:
# ============================================

# Claude API (Anthropic)
# Obtener en: https://console.anthropic.com/
CLAUDE_API_KEY=sk-ant-api03-xxxxx

# Cloudflare
# Obtener en: Cloudflare Dashboard > My Profile > API Tokens
CLOUDFLARE_TOKEN=tu_cloudflare_api_token
CLOUDFLARE_ACCOUNT_ID=tu_account_id

# Hetzner Cloud
# Obtener en: Hetzner Cloud Console > Security > API Tokens
HETZNER_TOKEN=tu_hetzner_api_token

# ============================================
# SERVIDOR
# ============================================

# IP de tu VPS Hetzner (la obtienes al crear el servidor)
SERVER_IP=xxx.xxx.xxx.xxx

# Dominio principal de tu panel
PANEL_DOMAIN=mcweb.fast

# Ruta donde se guardan los sitios (en producción: /var/www)
SITES_ROOT=./sites

# ============================================
# EMAIL (opcional, para notificaciones)
# ============================================

SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=tu_email@gmail.com
SMTP_PASS=tu_app_password

# ============================================
# LÍMITES
# ============================================

# Máximo de llamadas a Claude API por cliente/día
MAX_CLAUDE_CALLS_PER_DAY=20

# Tamaño máximo de imagen (en bytes)
MAX_IMAGE_SIZE=5242880

# ============================================
# MODO DESARROLLO
# ============================================

NODE_ENV=development
